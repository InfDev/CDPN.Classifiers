@page "/PaperSizes"

@using CDPN.Classifiers.Client.Models;

<h4>@Localizer["Title"]</h4>

<div class="table scroll mt-2">
    <Table TItem="PaperSize" IsPagination="true" PageItemsSource="@PageItemsSource" RenderMode="TableRenderMode.Table"
           IsStriped="true" IsBordered="true" UseInjectDataService="true" OnQueryAsync="OnQueryAsync" >
        <TableColumns>
            <TableColumn @bind-Field="@context.Id" Text="Id" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.Format" Text="@Localizer["TableFieldFormat"]" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.Width" Text="@Localizer["TableFieldWidth"]" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.Height" Text="@Localizer["TableFieldHeight"]" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.Use" Text="@Localizer["TableFieldUse"]" ></TableColumn>
        </TableColumns>
    </Table>
</div>
