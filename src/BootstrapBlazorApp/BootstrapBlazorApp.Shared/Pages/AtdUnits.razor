            <TableColumn @bind-Field="@context.AtdLevelId" Text="Уровень" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.AtdCategoryId" Text="Категория" Sortable=true Filterable=true ></TableColumn>
            <TableColumn @bind-Field="@context.Name" Text="Наименование" Sortable=true Filterable=true ></TableColumn>
        </TableColumns>
    </Table>
</div>
